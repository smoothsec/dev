# This file describes the network interfaces available on your system
# and how to activate them. For more information, see interfaces(5).

# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
#allow-hotplug eth2
#iface eth2 inet dhcp

auto ids_iface_0
iface ids_iface_0 inet manual
	up ifconfig ids_iface_0 0.0.0.0 up
	up ifconfig ids_iface_0 promisc
	down ifconfig ids_iface_0 down

auto ids_manage_iface
iface ids_manage_iface inet static
	address ids_sensor_ip
	netmask 255.255.255.0
	gateway ids_gateway
