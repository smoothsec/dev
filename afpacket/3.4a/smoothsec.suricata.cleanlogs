#!/bin/bash

if [ -f /etc/smoothsec.cfg ]; then
	. /etc/smoothsec.cfg
fi

if [ -f /etc/afpacket.cfg ]; then
	. /etc/afpacket.cfg
fi

if [ -d /var/log/suricata ]; then
	/usr/bin/find  /var/log/suricata/processed/ -name "unified2.*"  -mtime +$DAYS -exec rm {} \;

else 
	echo "Suricata directory doesn't exist!!!"

fi
