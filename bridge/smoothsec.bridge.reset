. /etc/smoothsec.cfg
. /etc/bridge.cfg

update-rc.d bridge remove > /dev/null 2>&1

if [ "$BR_SETUP" == "yes" ]; then
	cp /usr/local/smoothsec/confs/bridge/interfaces.original /etc/network/interfaces
	cp /usr/local/smoothsec/confs/bridge/bridge.original /etc/init.d/bridge
	cp /usr/local/smoothsec/confs/bridge/sagan.conf.origianl /etc/sagan/sagan.conf
	cp /usr/local/smoothsec/confs/bridge/suricata.original /etc/init.d/suricata
	cp /usr/local/smoothsec/confs/bridge/sagan.orgianl /etc/init.d/sagan
	sed -i "s|AF_SETUP=yes|AF_SETUP=no|" /etc/afpacket.cfg
	#update-rc.d $ENGINE defaults > /dev/null 2>&1
fi

echo "Reboot the system ...."
